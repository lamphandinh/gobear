<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gobear">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.gobear.GobearApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.gobear.ui.splash.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="behind"
            android:theme="@style/SplashActivity"
            android:windowSoftInputMode="stateHidden|adjustResize|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.walkthough.WalkThroughActivity"
            android:launchMode="singleTop"
            android:screenOrientation="behind" />
        <activity android:name=".ui.login.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="behind"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".ui.main.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="behind" />
    </application>

</manifest>